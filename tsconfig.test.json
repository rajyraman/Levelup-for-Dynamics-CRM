{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "jest",
            "@types/chrome",
            "@types/puppeteer",
            "@types/jest-environment-puppeteer"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "release"
    ]
}
