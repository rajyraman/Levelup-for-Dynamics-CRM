{
    "compilerOptions": {
        "sourceMap": false,
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "target": "es2015",
        "outDir": "../../dist",
        "typeRoots": ["./types", "./node_modules/@types"],
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "allowJs": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}